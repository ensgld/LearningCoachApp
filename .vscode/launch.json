{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter: Run App",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Backend: Dev Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Backend + App)",
            "configurations": [
                "Backend: Dev Server",
                "Flutter: Run App"
            ]
        }
    ]
}