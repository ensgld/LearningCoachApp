{
  "name": "learning-coach-backend",
  "version": "1.0.0",
  "description": "Backend API for Learning Coach - Express.js + PostgreSQL",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "./scripts/setup.sh",
    "db:setup:seed": "./scripts/setup.sh seed",
    "db:migrate": "dbmate --url \"$DATABASE_URL\" --migrations-dir ./db/migrations up",
    "db:rollback": "dbmate --url \"$DATABASE_URL\" --migrations-dir ./db/migrations down",
    "db:status": "dbmate --url \"$DATABASE_URL\" --migrations-dir ./db/migrations status",
    "db:create": "dbmate --url \"$DATABASE_URL\" --migrations-dir ./db/migrations create",
    "db:drop": "dbmate --url \"$DATABASE_URL\" --migrations-dir ./db/migrations drop",
    "db:reset": "npm run db:drop && npm run db:migrate && npm run db:seed",
    "db:seed": "psql \"$DATABASE_URL\" -f ./db/seed/seed.sql",
    "db:psql": "psql \"$DATABASE_URL\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "dbmate": "^2.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/index.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ]
  }
}
