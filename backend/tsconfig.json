{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": [
            "ES2021"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@config/*": [
                "./config/*"
            ],
            "@db/*": [
                "./db/*"
            ],
            "@routes/*": [
                "./routes/*"
            ],
            "@common/*": [
                "./common/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}